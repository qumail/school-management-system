{
  "name": "student-management-system",
  "version": "0.1.0",
  "description": "student-management-system-api",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/integration",
    "test:unit": "jest tests/unit",
    "test:ci": "jest --runInBand --coverage",
    "test:integration:coverage:simple": "jest tests/integration --coverage --collectCoverageFrom=\"managers/**/*.js\" --coverageReporters=text-summary",
    "start": "node src/app.js",
    "dev": "nodemon src/app.js"
  },
   "jest": {
    "testEnvironment": "node",
    "setupFiles": ["./tests/jest.setup.js"],
    "setupFilesAfterEnv": ["./tests/setup.js"],
    "testTimeout": 30000,
    "verbose": true,
    "clearMocks": true,
     "resetModules": true,
    "collectCoverageFrom": [
      "managers/**/*.js",
      "mws/**/*.js",
      "libs/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "glob": "^13.0.5",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "md5": "^2.3.0",
    "mongoose": "^9.2.1",
    "nanoid": "^3.3.2",
    "qantra-pineapple": "^1.1.8",
    "request-ip": "^2.1.3",
    "useragent": "^2.3.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^11.0.1",
    "nodemon": "^3.1.11",
    "supertest": "^7.2.2"
  }
}